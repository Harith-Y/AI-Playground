# ====================================
# AI Playground - Frontend Configuration
# Environment: Development
# ====================================

# -------------------- API Configuration --------------------
# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL
VITE_WS_URL=ws://localhost:8000/ws

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# -------------------- Application --------------------
# Environment mode
VITE_ENV=development

# Application name
VITE_APP_NAME=AI Playground

# Application version
VITE_APP_VERSION=1.0.0

# -------------------- Features --------------------
# Enable/disable features
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false

# -------------------- Development --------------------
# Show debug information
VITE_DEBUG=true

# Enable hot module replacement
VITE_HMR=true

# Development server port
VITE_PORT=5173

# -------------------- Storage --------------------
# LocalStorage prefix
VITE_STORAGE_PREFIX=ai_playground_

# Session storage timeout (minutes)
VITE_SESSION_TIMEOUT=30

# -------------------- File Upload --------------------
# Maximum file upload size (bytes) - 100MB
VITE_MAX_FILE_SIZE=104857600

# Allowed file extensions
VITE_ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.json

# -------------------- UI Configuration --------------------
# Theme
VITE_DEFAULT_THEME=light

# Language
VITE_DEFAULT_LANGUAGE=en

# Items per page for pagination
VITE_ITEMS_PER_PAGE=10

# -------------------- API Endpoints --------------------
# Override specific endpoints if needed
# VITE_DATASETS_API=${VITE_API_URL}/api/v1/datasets
# VITE_MODELS_API=${VITE_API_URL}/api/v1/models
# VITE_AUTH_API=${VITE_API_URL}/api/v1/auth
