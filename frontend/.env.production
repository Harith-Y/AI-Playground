# ====================================
# AI Playground - Frontend Configuration
# Environment: Production
# ====================================

# -------------------- API Configuration --------------------
# Backend API URL - REPLACE WITH YOUR PRODUCTION API URL
VITE_API_URL=https://api.your-production-domain.com

# WebSocket URL - REPLACE WITH YOUR PRODUCTION WS URL
VITE_WS_URL=wss://api.your-production-domain.com/ws

# API request timeout (milliseconds)
VITE_API_TIMEOUT=60000

# -------------------- Application --------------------
# Environment mode
VITE_ENV=production

# Application name
VITE_APP_NAME=AI Playground

# Application version
VITE_APP_VERSION=1.0.0

# -------------------- Features --------------------
# Enable/disable features
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# -------------------- Production --------------------
# Disable debug information
VITE_DEBUG=false

# -------------------- Storage --------------------
# LocalStorage prefix
VITE_STORAGE_PREFIX=ai_playground_

# Session storage timeout (minutes)
VITE_SESSION_TIMEOUT=60

# -------------------- File Upload --------------------
# Maximum file upload size (bytes) - 500MB for production
VITE_MAX_FILE_SIZE=524288000

# Allowed file extensions
VITE_ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.json

# -------------------- UI Configuration --------------------
# Theme
VITE_DEFAULT_THEME=light

# Language
VITE_DEFAULT_LANGUAGE=en

# Items per page for pagination
VITE_ITEMS_PER_PAGE=20

# -------------------- Analytics (Optional) --------------------
# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -------------------- CDN (Optional) --------------------
# If using CDN for static assets
# VITE_CDN_URL=https://cdn.your-domain.com

# -------------------- Security --------------------
# Content Security Policy
VITE_CSP_ENABLED=true

# HTTPS only
VITE_FORCE_HTTPS=true
