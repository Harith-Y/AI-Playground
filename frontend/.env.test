# ====================================
# AI Playground - Frontend Configuration
# Environment: Testing
# ====================================

# -------------------- API Configuration --------------------
# Mock API or test backend
VITE_API_URL=http://localhost:8001

# WebSocket URL
VITE_WS_URL=ws://localhost:8001/ws

# API request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# -------------------- Application --------------------
# Environment mode
VITE_ENV=test

# Application name
VITE_APP_NAME=AI Playground Test

# Application version
VITE_APP_VERSION=1.0.0-test

# -------------------- Features --------------------
# Disable all external features for testing
VITE_ENABLE_WEBSOCKETS=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false

# -------------------- Testing --------------------
# Enable debug for tests
VITE_DEBUG=true

# Use mock data
VITE_USE_MOCK_DATA=true

# -------------------- Storage --------------------
# Use test-specific storage prefix
VITE_STORAGE_PREFIX=ai_playground_test_

# Session storage timeout (minutes)
VITE_SESSION_TIMEOUT=10

# -------------------- File Upload --------------------
# Smaller limits for testing
VITE_MAX_FILE_SIZE=10485760

# Allowed file extensions
VITE_ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.json

# -------------------- UI Configuration --------------------
# Theme
VITE_DEFAULT_THEME=light

# Language
VITE_DEFAULT_LANGUAGE=en

# Items per page for pagination
VITE_ITEMS_PER_PAGE=5
