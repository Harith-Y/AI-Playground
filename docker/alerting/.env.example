# AlertManager Configuration
# Email Configuration
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=ml-platform-alerts@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=ml-platform-alerts@example.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Webhook Configuration
WEBHOOK_TOKEN=your-webhook-token-here

# PagerDuty Configuration
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# Alert Recipients
ML_TEAM_EMAIL=ml-team@example.com
DATA_TEAM_EMAIL=data-team@example.com
OPS_TEAM_EMAIL=ops-team@example.com
DATA_SCIENTISTS_EMAIL=data-scientists@example.com

# Slack Channels
SLACK_ALERTS_CHANNEL=#ml-alerts
SLACK_WARNINGS_CHANNEL=#ml-warnings
SLACK_OPS_CHANNEL=#ops-alerts
SLACK_DATA_CHANNEL=#data-quality

# Alert Thresholds
TRAINING_TIMEOUT_SECONDS=7200
MEMORY_THRESHOLD_PERCENT=95
CPU_THRESHOLD_PERCENT=90
GPU_MEMORY_THRESHOLD_PERCENT=90
DISK_SPACE_THRESHOLD_PERCENT=10

# Notification Settings
ALERT_GROUP_WAIT=10s
ALERT_GROUP_INTERVAL=10s
ALERT_REPEAT_INTERVAL=12h
CRITICAL_REPEAT_INTERVAL=4h
WARNING_REPEAT_INTERVAL=24h
