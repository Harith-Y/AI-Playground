# Docker Environment Configuration Template for AI-Playground Backend
# Copy this file to .env and update values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Docker Compose (use service name as host)
DATABASE_URL=postgresql://aiplayground:aiplayground_dev_password@postgres:5432/aiplayground

# For local development (use localhost)
# DATABASE_URL=postgresql://aiplayground:aiplayground_dev_password@localhost:5432/aiplayground

# For Neon (production)
# DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For Docker Compose (use service name as host)
REDIS_URL=redis://redis:6379/0

# For local development (use localhost)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# For Docker Compose (use service name as host)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# For local development (use localhost)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# API SETTINGS
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=AI-Playground
VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# IMPORTANT: Change this in production!
SECRET_KEY=docker-dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FILE STORAGE
# =============================================================================
# For Docker (use container path)
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# For local development
# UPLOAD_DIR=./uploads

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=True

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# For Docker (use container path)
LOG_DIR=/app/logs

# For local development
# LOG_DIR=./logs

# =============================================================================
# CORS SETTINGS (Optional)
# =============================================================================
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
# CORS_ALLOW_CREDENTIALS=True
# CORS_ALLOW_METHODS=["*"]
# CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# NOTES
# =============================================================================
# 1. For Docker Compose: Use service names (postgres, redis) as hostnames
# 2. For local development: Use localhost as hostname
# 3. Never commit real credentials to version control
# 4. Use strong passwords in production
# 5. Enable SSL/TLS for production databases
