# ====================================
# AI Playground - Backend Configuration
# Environment: Testing
# ====================================

# -------------------- Database --------------------
# Use dedicated test database or in-memory database
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ai_playground_test
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ai_playground_test
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5

# -------------------- Redis --------------------
REDIS_URL=redis://localhost:6379/1
REDIS_MAX_CONNECTIONS=5

# -------------------- API Configuration --------------------
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------- Security --------------------
SECRET_KEY=test-secret-key-for-testing-purposes-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------- File Storage --------------------
UPLOAD_DIR=./test_uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.json

# -------------------- Celery --------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=True
CELERY_WORKER_CONCURRENCY=2

# -------------------- Logging --------------------
LOG_LEVEL=WARNING
LOG_FILE=

# -------------------- Application --------------------
ENVIRONMENT=test
DEBUG=False
APP_NAME=AI Playground Test
APP_VERSION=1.0.0

# -------------------- Feature Flags --------------------
ENABLE_WEBSOCKETS=False
ENABLE_CELERY=False
ENABLE_EMAIL=False
ENABLE_CACHING=False
ENABLE_RATE_LIMITING=False

# -------------------- Testing --------------------
# Pytest configuration is in pytest.ini
TESTING=True
